<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <Button
        android:id="@+id/dot1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:text="新订单"
        android:textColor="@drawable/pager_switcher"
        android:background="@color/pagerSwitcherBg"/>
    <Button
        android:id="@+id/dot2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:text="配送"
        android:textColor="@drawable/pager_switcher"
        android:background="@color/pagerSwitcherBg"/>
    <Button
        android:id="@+id/dot3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:text="催单"
        android:textColor="@drawable/pager_switcher"
        android:background="@color/pagerSwitcherBg"/>
    <Button
        android:id="@+id/dot4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:text="已完成"
        android:textColor="@drawable/pager_switcher"
        android:background="@color/pagerSwitcherBg"/>

</LinearLayout>